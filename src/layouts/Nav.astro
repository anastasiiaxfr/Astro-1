---
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
import { SiteConfig } from "@/config/siteConfig.ts";
const { site } = SiteConfig.site;
---

<nav class="header-nav">
  <a href={`tel:${site.tel}`} class="chip">{i18n.SITE.PHONE} {site.tel}</a>
  <a href={`mailto:${site.email}`} class="chip">{site.email}</a>
  {
    i18n.HEADER.BTNS.map((btn) => (
      <a href={btn.URL || "#"} class={`btn-${btn.TYPE}`}>
        {btn.LABEL}
      </a>
    ))
  }
</nav>
